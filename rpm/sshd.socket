[Unit]
Description=OpenSSH Server Socket
Conflicts=sshd.service

[Socket]
ListenStream=22
Accept=yes
ExecStartPre=/bin/bash -c 'if [ \( ! -s /etc/ssh/ssh_host_ecdsa_key \) -a \( ! -s /etc/ssh/ssh_host_ecdsa_key.pub \) -a \( ! -s /etc/ssh/ssh_host_rsa_key \) -a \( ! -s /etc/ssh/ssh_host_rsa_key.pub \) -a \( ! -s /etc/ssh/ssh_host_ed25519_key \) -a \( ! -s /etc/ssh/ssh_host_ed25519_key.pub \) ]; then /usr/sbin/sshd-hostkeys; fi'

[Install]
WantedBy=sockets.target
